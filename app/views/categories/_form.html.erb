<div class="container">
<% @category.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
  <div class="row justify-content-center">
  <div class="col-10">
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "category name", class: "col-2 col-form-label text-light" %>
   <div class="col-10">
    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter the category name " %>
   </div>
  </div>

  <div class="form-group row">
   <%= f.label :Store, class: "col-2 col-form-label text-light" %>
   <div class="col-10 col-form-label"> 
   <%= f.collection_select(:store_id, Store.all, :id, :name) %>
   </div>
  </div>

  <div class="form-group row justify-content-center">
   <%= f.submit class: "btn btn-outline-light btn-lg" %> 
  </div>
<% end %>