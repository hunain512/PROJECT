<% @store.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
  <div class="row justify-content-center">
  <div class="col-10">
<%= form_with(model: @store, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
  <div class="form-group row">
   <%= f.label :name, "store name", class: "col-2 col-form-label text-light" %>
   <div class="col-10">
    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter the store name " %>
   </div>
  </div>

  <div class="form-group row">
   <%= f.label :User, class: "col-2 col-form-label text-light" %>
   <div class="col-10 col-form-label"> 
   <%= f.collection_select(:user_ids, User.all, :id, :email, {prompt: "Make your selection from the list below (can be empty)"}, {multiple: true, size: 4, class: "form-select shadow rounded"}) %>
   </div>
  </div>

  <div class="form-group row justify-content-center">
   <%= f.submit class: "btn btn-outline-light btn-lg" %> 
  </div>
<% end %>

